{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ]
}